  //   Serial.print(getCalibratedS(), 2);
  //   Serial.print("\", \"T\":\"");
  //    Serial.print(getCalibratedT(), 2);
  //  Serial.print("\", \"U\":\"");
  //   Serial.print(getCalibratedU(), 2);
  //   Serial.print("\", \"V\":\"");
  //   Serial.print(getCalibratedV(), 2);
  //  Serial.print("\", \"W\":\"");
  //  Serial.print(getCalibratedW(), 2);
  //  Serial.println("\"}");
  //  }

}
